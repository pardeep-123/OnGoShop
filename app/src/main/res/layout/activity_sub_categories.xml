<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SubCategoriesActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/ivBar"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_70sdp"
                android:scaleType="fitXY"
                android:src="@drawable/small_header"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                >
                <ImageView
                    android:id="@+id/ivBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/back"/>
                <TextView
                    style="@style/CommonTextWrapcontent"
                    android:textColor="@color/white"
                    android:text="Drink &amp; Bevrages"
                    android:textSize="@dimen/_14sdp"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/llSearch"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/shape_row"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginRight="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_50sdp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:src="@drawable/search"/>
                <EditText
                    android:id="@+id/tvName"
                    style="@style/CommonTextMatchparent"
                    android:hint="Search"
                    android:backgroundTint="@color/white"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_data"
                android:layout_below="@id/llSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:orientation="vertical">

                <TextView
                    style="@style/text"
                    android:text="Flavoured milk"
                    android:layout_gravity="start"
                    android:gravity="center_vertical"
                 />
                <TextView
                    style="@style/text"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="Tea"
                    android:layout_gravity="start"
                    android:gravity="center_vertical"/>
                <TextView
                    style="@style/text"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="Coffee"
                    android:layout_gravity="start"
                    android:gravity="center_vertical"/>
                <TextView
                    android:id="@+id/tvDrinks"
                    style="@style/text"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="Soft Drinks"
                    android:layout_gravity="start"
                    android:gravity="center_vertical"/>
                <TextView
                    style="@style/text"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="Water"
                    android:layout_gravity="start"
                    android:gravity="center_vertical"/>
                <TextView
                    style="@style/text"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="Sports &amp; Energy Drinks"
                    android:layout_gravity="start"
                    android:gravity="center_vertical"/>
                <TextView
                    style="@style/text"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="Long Life Milk"
                    android:layout_gravity="start"
                    android:gravity="center_vertical"/>
                <TextView
                    style="@style/text"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="Kitchen"
                    android:layout_gravity="start"
                    android:gravity="center_vertical"/>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>