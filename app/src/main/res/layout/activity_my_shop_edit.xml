<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MyShopEditActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_shop_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_250sdp"
                android:layout_below="@+id/ivBar"
                android:scaleType="fitXY"
                android:src="@mipmap/no_image_placeholder" />

            <ImageView
                android:id="@+id/ivAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/_80sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:src="@drawable/add_2" />

            <ImageView
                android:id="@+id/ivBar"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_70sdp"
                android:scaleType="fitXY"
                android:src="@drawable/small_header" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp">

                <ImageView
                    android:id="@+id/ivBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:src="@drawable/back" />

                <TextView
                    style="@style/CommonTextWrapcontent"
                    android:layout_centerInParent="true"
                    android:text="@string/my_shop"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14sdp" />
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_shop_image"

                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvName"
                    style="@style/CommonTextWrapcontent"
                    android:text="Business Name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />


                <EditText
                    android:id="@+id/et_shop_name"
                    style="@style/Edittext"
                    android:layout_below="@id/tvEmail"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:hint="@string/enter_business_name"
                    android:inputType="text"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvEmail"
                    style="@style/CommonTextWrapcontent"
                    android:layout_below="@id/ivBar"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="Category"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />


                <TextView
                    android:id="@+id/tv_category_name"
                    style="@style/Edittext"
                    android:layout_below="@id/tvEmail"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:hint="@string/enter_category"
                    android:textSize="16sp" />

                <TextView
                    style="@style/CommonTextWrapcontent"
                    android:layout_below="@id/ivBar"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="ABN"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />


                <EditText
                    android:id="@+id/et_shop_abn"
                    style="@style/Edittext"
                    android:layout_below="@id/tvEmail"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:hint="@string/enter_abn"
                    android:inputType="text"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvPass"
                    style="@style/CommonTextWrapcontent"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="Building Number"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />

                <EditText
                    android:id="@+id/et_shop_building_number"
                    style="@style/Edittext"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:hint="@string/enter_building_number"
                    android:inputType="text"
                    android:textSize="16sp" />

                <TextView
                    style="@style/CommonTextWrapcontent"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="Street Number"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />

                <EditText
                    android:id="@+id/et_shop_street_number"
                    style="@style/Edittext"
                    android:layout_below="@id/tvPass"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:hint="@string/enter_street_number"
                    android:inputType="text"
                    android:textSize="16sp" />

                <TextView
                    style="@style/CommonTextWrapcontent"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="State"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />

                <EditText
                    android:id="@+id/et_shop_state"
                    style="@style/Edittext"
                    android:layout_below="@id/tvPass"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:hint="@string/enter_state"
                    android:inputType="text"
                    android:textSize="16sp" />

                <TextView
                    style="@style/CommonTextWrapcontent"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="@string/city_suburb"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />

                <EditText
                    android:id="@+id/et_shop_city"
                    style="@style/Edittext"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:hint="@string/enter_city"
                    android:inputType="text"
                    android:textSize="16sp" />

                <TextView
                    style="@style/CommonTextWrapcontent"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="@string/country"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />

                <EditText
                    android:id="@+id/et_shop_country"
                    style="@style/Edittext"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:hint="@string/enter_country"
                    android:inputType="text"
                    android:textSize="16sp" />

                <TextView
                    style="@style/CommonTextWrapcontent"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="@string/postal_code"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />

                <EditText
                    android:id="@+id/et_shop_postal_code"
                    style="@style/Edittext"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:hint="@string/enter_postal_code"
                    android:inputType="text"
                    android:textSize="16sp" />

                <TextView
                    style="@style/CommonTextWrapcontent"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="Timings"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_open_time"
                        style="@style/Edittext"
                        android:layout_below="@id/tvPass"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:hint="@string/open_time"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_close_time"
                        style="@style/Edittext"
                        android:layout_below="@id/tvPass"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:hint="@string/close_time"
                        android:textSize="16sp" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/shape_row"
                    android:backgroundTint="@color/white">

                    <TextView
                        style="@style/CommonTextWrapcontent"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="@string/delivery"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:src="@drawable/arrow" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlChange"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_below="@id/ivBar"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/shape_row"
                    android:backgroundTint="@color/white">

                    <TextView
                        style="@style/CommonTextWrapcontent"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="Delivery Options"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:src="@drawable/arrow" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_below="@id/ivBar"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/shape_row"
                    android:backgroundTint="@color/white">

                    <TextView
                        style="@style/CommonTextWrapcontent"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="Delivery Charges"

                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:src="@drawable/arrow" />
                </RelativeLayout>

                <Button
                    android:id="@+id/btnSubmit"
                    style="@style/Button"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:text="@string/update" />

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>