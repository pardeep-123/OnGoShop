<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SalesDataActivity">
    <ImageView
        android:id="@+id/ivBar"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_70sdp"
        android:scaleType="fitXY"
        android:src="@drawable/small_header"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        >
        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/back"/>

        <TextView
           style="@style/CommonTextWrapcontent"
            android:textColor="@color/white"
            android:text="Sales Data"
            android:textSize="@dimen/_14sdp"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/llText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/_30sdp"
        android:layout_below="@id/ivBar"
        >
        <TextView
           style="@style/CommonTextMatchparent"
            android:textColor="@color/grey"
            android:text="Days"
            android:layout_weight="1"
            android:textSize="@dimen/_14sdp"
            />
        <TextView
            style="@style/CommonTextMatchparent"
            android:textColor="@color/grey"
            android:text="Weekly"
            android:layout_weight="1"
            android:textSize="@dimen/_14sdp"
            />
        <TextView
            style="@style/CommonTextMatchparent"
            android:textColor="@color/app"
            android:text="Monthly"
            android:layout_weight="1"
            android:textSize="@dimen/_14sdp"
            />

    </LinearLayout>
    <ImageView
        android:id="@+id/ivData"
        android:layout_below="@id/llText"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/sales_data"/>

    <LinearLayout
        android:id="@+id/llData"
        android:layout_below="@id/ivData"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_margin="@dimen/_20sdp"
        android:background="@drawable/shape_row"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:orientation="horizontal">
            <TextView
                style="@style/CommonTextWrapcontent"
                android:textColor="@color/black"
                android:text="Total Earning"
                android:textSize="@dimen/_14sdp"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="70"
                android:fontFamily="@font/regular"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:gravity="end"
                android:text="$5000.20"
                android:textSize="@dimen/_12sdp" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>